<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomEditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/gray_oval_stroke</item>
        <item name="android:padding">12dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textCursorDrawable">@drawable/edittext_color_cursor</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
    </style>

    <style name="SubtitleText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
    </style>

    <style name="CtaBlack">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">14dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:background">@drawable/selector_black_corners</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
    </style>

    <style name="CtaWhite">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_margin">14dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/selector_white_stroke</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
    </style>

    <style name="CheckBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:buttonTint">@color/black</item>
    </style>

    <style name="Divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">@dimen/global_start_end_margin</item>
        <item name="android:layout_marginEnd">@dimen/global_start_end_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/light_gray</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="SendButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/selector_black_circle</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/send</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:drawableEnd">@drawable/send_svg</item>
    </style>

</resources>
