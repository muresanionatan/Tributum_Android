<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/single_checkbox"
            style="@style/CheckBox"
            android:checked="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/single_label"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/married_checkbox"
            style="@style/CheckBox"
            android:layout_marginStart="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/married_label"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/divorced_checkbox"
            style="@style/CheckBox"
            android:layout_marginStart="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/divorced_label"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cohabiting_checkbox"
            style="@style/CheckBox" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cohabiting_label"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/married_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="14dp"
        android:orientation="vertical"
        android:visibility="gone">

        <include
            android:id="@+id/marriage_layout_id"
            layout="@layout/contract_file_item" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/quicksand_medium"
            android:text="@string/have_kids_label"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/number_kids_id"
            style="@style/CustomEditText"
            android:layout_width="140dp"
            android:hint="@string/number_kids" />
    </LinearLayout>
</LinearLayout>