<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/file_chooser_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alpha_white"
    android:elevation="12dp"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/selector_white_stroke"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/add_from_gallery_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_white_stroke"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/add_from_gallery"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/take_photo_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_white_stroke"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/take_photo_label"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>