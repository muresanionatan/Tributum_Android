<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".activity.contract.ContractActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/global_start_end_margin"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/global_start_end_margin">

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include layout="@layout/personal_info_layout" />

                    <include layout="@layout/marital_status_layout" />

                    <include layout="@layout/date_pickers_layout" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/self_employed_id"
                            style="@style/CheckBox"
                            android:checked="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/self_employed_label"
                            android:textColor="@color/black" />

                        <CheckBox
                            android:id="@+id/employee_id"
                            style="@style/CheckBox"
                            android:layout_marginStart="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/employee_label"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <include
                        android:id="@+id/taxes_id"
                        layout="@layout/applying_for_layout" />

                    <View
                        style="@style/Divider"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        style="@style/SubtitleText"
                        android:text="@string/add_contract_files" />

                    <include layout="@layout/contract_files_layout" />

                    <TextView
                        style="@style/SubtitleText"
                        android:text="@string/signature_label" />

                    <TextView
                        android:id="@+id/make_signature"
                        style="@style/CtaWhite"
                        android:layout_marginTop="10dp"
                        android:text="@string/draw_signature"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/send_button"
                        style="@style/SendButton"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

        <ImageView
            android:id="@+id/clear_image"
            android:layout_width="@dimen/global_small_image"
            android:layout_height="@dimen/global_small_image"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/selector_gray_circle"
            android:elevation="8dp"
            android:scaleType="center"
            android:src="@drawable/delete_svg"
            app:tint="@color/black"
            tools:ignore="ContentDescription" />

        <include layout="@layout/image_preview_layout" />

        <include layout="@layout/signature_drawing_layout" />
    </RelativeLayout>

    <include layout="@layout/file_chooser_layout" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>