<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_1"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/contract_back_id"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/white_circle"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/invoice_title_id"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_icon_back"
                app:tint="@color/contract_1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/checkboxes_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="48dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/vat_layout_id"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginEnd="6dp"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/vat_checkbox"
                    style="@style/CheckBox"
                    android:layout_marginStart="14dp"
                    android:button="@drawable/payment_selector"
                    android:checked="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/manrope_medium"
                    android:text="VAT"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rct_layout_id"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="6dp"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/rct_checkbox"
                    style="@style/CheckBox"
                    android:layout_marginStart="20dp"
                    android:button="@drawable/payment_selector"
                    android:checked="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/manrope_medium"
                    android:text="RCT"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <com.app.tributum.utils.ui.CustomScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/contract_back_id"
            android:layout_marginStart="24dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/first_name_edit_text"
                        style="@style/CustomEditText"
                        android:layout_width="match_parent"
                        android:hint="@string/first_name_label"
                        android:inputType="textCapWords" />

                    <EditText
                        android:id="@+id/last_name_edit_text"
                        style="@style/CustomEditText"
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:hint="@string/last_name_label"
                        android:inputType="textCapWords" />

                    <EditText
                        android:id="@+id/pps_number_edit_text"
                        style="@style/CustomEditText"
                        android:layout_marginTop="20dp"
                        android:hint="@string/pps_number"
                        android:textAllCaps="true" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/white_rectangle_corners">

                        <EditText
                            android:id="@+id/edittext_starting_date_id"
                            style="@style/CustomEditText"
                            android:layout_marginStart="44dp"
                            android:hint="@string/starting_date"
                            android:inputType="date"
                            tools:ignore="TouchTargetSizeCheck" />

                        <ImageView
                            android:id="@+id/starting_date_image_id"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/ic_icon_date" />
                    </RelativeLayout>

                    <include
                        android:id="@+id/signature_layout_id"
                        layout="@layout/signature_drawing_layout"
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pps_number_edit_text" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="48dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="48dp"
                    android:background="@color/grey_2" />

                <com.app.tributum.utils.ui.CustomButton
                    android:id="@+id/contract_send_layout_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/contract_send_id"
                        style="@style/SendButton"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="32dp"
                        android:background="@drawable/contract_send"
                        android:text="@string/send_label" />
                </com.app.tributum.utils.ui.CustomButton>
            </LinearLayout>
        </com.app.tributum.utils.ui.CustomScrollView>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>