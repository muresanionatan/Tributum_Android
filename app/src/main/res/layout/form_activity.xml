<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_1"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/form_back_id"
            style="@style/BackLayout">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_icon_back"
                app:tint="@color/contract_1" />
        </LinearLayout>

        <com.app.tributum.utils.ui.CustomScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/form_back_id"
            android:layout_marginStart="24dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/TitleText"
                    android:layout_width="match_parent"
                    android:layout_marginStart="8dp"
                    android:text="Form 11"
                    android:textColor="@color/contract_1" />

                <TextView
                    style="@style/SubtitleText"
                    android:layout_marginStart="8dp"
                    android:text="@string/mandatory_fields" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/full_name_edit_text"
                        style="@style/CustomEditText"
                        android:layout_width="match_parent"
                        android:layout_marginTop="12dp"
                        android:hint="@string/full_name_label"
                        android:inputType="textCapWords" />

                    <EditText
                        android:id="@+id/email_edit_text"
                        style="@style/CustomEditText"
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:hint="@string/email_label"
                        android:inputType="textEmailAddress" />

                    <EditText
                        android:id="@+id/year_edit_text"
                        style="@style/CustomEditText"
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:hint="@string/year_label"
                        android:inputType="textEmailAddress" />

                    <TextView
                        style="@style/MostUsedText"
                        android:text="@string/upload_bank_label"/>

                    <include
                        android:id="@+id/bank_statement_id"
                        layout="@layout/invoices_item" />

                    <TextView
                        style="@style/MostUsedText"
                        android:text="@string/do_you_have_rent" />

                    <include
                        android:id="@+id/yes_no_bank_id"
                        layout="@layout/yes_no_layout" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/MostUsedText"
                            android:text="@string/rent_label"/>

                        <include
                            android:id="@+id/rent_id"
                            layout="@layout/invoices_item" />

                        <TextView
                            style="@style/MostUsedText"
                            android:text="@string/rtb_label"/>

                        <include
                            android:id="@+id/rtb_id"
                            layout="@layout/invoices_item" />
                    </LinearLayout>

                    <TextView
                        style="@style/MostUsedText"
                        android:text="@string/are_you_married_label"/>

                    <include
                        android:id="@+id/married_yes_no_id"
                        layout="@layout/yes_no_layout" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/MostUsedText"
                            android:text="@string/upload_marriage_label" />

                        <include
                            android:id="@+id/marriage_id"
                            layout="@layout/invoices_item" />

                        <TextView
                            style="@style/MostUsedText"
                            android:text="@string/wife_fisc_label" />

                        <include
                            android:id="@+id/fisc_id"
                            layout="@layout/invoices_item" />
                    </LinearLayout>

                    <TextView
                        style="@style/MostUsedText"
                        android:text="@string/do_kids_get_benefit"/>

                    <include
                        android:id="@+id/kids_yes_no_id"
                        layout="@layout/yes_no_layout" />

                    <include
                        android:id="@+id/kids_id"
                        layout="@layout/invoices_item"
                        android:visibility="gone" />

                    <TextView
                        style="@style/MostUsedText"
                        android:text="@string/other_spending"/>

                    <include
                        android:id="@+id/invoices_id"
                        layout="@layout/invoices_item" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="48dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="48dp"
                    android:background="@color/grey_2" />

                <com.app.tributum.utils.ui.CustomButton
                    android:id="@+id/form_send_layout_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/SendButton"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="32dp"
                        android:background="@drawable/contract_send"
                        android:text="@string/send_form_label" />
                </com.app.tributum.utils.ui.CustomButton>
            </LinearLayout>
        </com.app.tributum.utils.ui.CustomScrollView>
    </RelativeLayout>

    <include
        layout="@layout/image_preview_layout"
        android:visibility="gone" />

    <include layout="@layout/file_chooser_layout" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>