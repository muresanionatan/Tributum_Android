<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/first_name_edit_text"
        style="@style/CustomEditText"
        android:layout_width="match_parent"
        android:layout_marginTop="48dp"
        android:hint="@string/first_name_label"
        android:inputType="textCapWords" />

    <EditText
        android:id="@+id/last_name_edit_text"
        style="@style/CustomEditText"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:hint="@string/last_name_label"
        android:inputType="textCapWords" />

    <EditText
        android:id="@+id/address_1_edit_text"
        style="@style/CustomEditText"
        android:layout_marginTop="20dp"
        android:hint="@string/address_label_1" />

    <EditText
        android:id="@+id/address_2_edit_text"
        style="@style/CustomEditText"
        android:layout_marginTop="20dp"
        android:hint="@string/address_label_2" />

    <EditText
        android:id="@+id/address_3_edit_text"
        style="@style/CustomEditText"
        android:layout_marginTop="20dp"
        android:hint="@string/address_label_3" />

    <EditText
        android:id="@+id/eircode_edit_text"
        style="@style/CustomEditText"
        android:layout_marginTop="20dp"
        android:hint="@string/eircode_label" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/white_rectangle_corners">

        <EditText
            android:id="@+id/edittext_birthday_id"
            style="@style/CustomEditText"
            android:layout_marginStart="44dp"
            android:hint="@string/date_of_birth"
            android:inputType="date" />

        <ImageView
            android:id="@+id/birthday_image_id"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_icon_date" />
    </RelativeLayout>

    <EditText
        android:id="@+id/occupation_edit_text"
        style="@style/CustomEditText"
        android:layout_marginTop="20dp"
        android:hint="@string/occupation_label"
        android:inputType="textCapWords" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="48dp"
        android:background="@color/grey_2" />

    <EditText
        android:id="@+id/phone_edit_text"
        style="@style/CustomEditText"
        android:layout_marginTop="20dp"
        android:hint="@string/phone_number_label"
        android:inputType="phone" />

    <EditText
        android:id="@+id/email_edit_text"
        style="@style/CustomEditText"
        android:inputType="textEmailAddress"
        android:layout_marginTop="20dp"
        android:hint="@string/mail_label" />

    <TextView
        android:id="@+id/payer_id_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/manrope_regular"
        android:text="@string/you_receive_copy"
        android:textColor="@color/grey_3"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/bank_edit_text"
        style="@style/CustomEditText"
        android:layout_marginTop="20dp"
        android:hint="@string/iban_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/manrope_bold"
        android:text="@string/add_your_id_label"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <include
        android:id="@+id/personal_info_id"
        layout="@layout/invoices_item" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="48dp"
        android:background="@color/grey_2" />

    <include layout="@layout/marital_status_layout" />
</LinearLayout>