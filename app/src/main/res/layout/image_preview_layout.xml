<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/preview_layout_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:gravity="center"
    android:visibility="gone">

    <ImageView
        android:id="@+id/image_preview_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/delete_photo_button_id"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/light_gray_circle"
        android:scaleType="center"
        android:src="@drawable/delete_svg"
        app:tint="@color/black" />

    <ImageView
        android:id="@+id/close_camera_id"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/light_gray_circle"
        android:scaleType="center"
        android:src="@drawable/close_svg"
        app:tint="@color/black" />
</RelativeLayout>