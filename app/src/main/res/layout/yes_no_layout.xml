<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/yes_layout_id"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        android:layout_weight="0.5"
        android:background="@drawable/white_rectangle_corners"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/yes_checkbox"
            style="@style/ContractCheckBox"
            android:checked="true" />

        <TextView
            android:id="@+id/no_text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/manrope_medium"
            android:text="@string/yes_label"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/single_layout_id"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_weight="0.5"
        android:background="@drawable/white_rectangle_corners"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/single_checkbox"
            style="@style/ContractCheckBox"
            android:checked="true" />

        <TextView
            android:id="@+id/single_text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/manrope_medium"
            android:text="@string/no_label"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
