<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/invoices_main_layout_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_1"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/salary_back_id"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/white_circle"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/invoice_title_id"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_icon_back"
            app:tint="@color/salary" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/salary_scroll_view_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/salary_back_id"
        android:layout_marginStart="24dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="24dp">

        <LinearLayout
            android:id="@+id/invoices_info_layout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_title_id"
                style="@style/TitleText"
                android:layout_width="180dp"
                android:layout_marginStart="8dp"
                android:text="@string/salary_label"
                android:textColor="@color/salary" />

            <TextView
                android:id="@+id/vat_subtitle_id"
                style="@style/SubtitleText"
                android:layout_marginStart="8dp"
                android:text="@string/rct_subtitle" />

            <TextView
                style="@style/SubtitleText"
                android:layout_marginStart="8dp"
                android:text="@string/mandatory_fields" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/manrope_bold"
                android:text="@string/payer_label"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/payer_edit_text"
                style="@style/CustomEditText"
                android:layout_marginTop="24dp"
                android:hint="@string/full_name_label"
                android:inputType="textCapWords" />

            <EditText
                android:id="@+id/payer_email_edit_text"
                style="@style/CustomEditText"
                android:layout_marginTop="20dp"
                android:hint="@string/email_label"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/payer_id_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/manrope_regular"
                android:text="@string/you_receive_copy_salary"
                android:textColor="@color/grey_3"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/manrope_bold"
                android:text="@string/salary_period_label"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <include
                layout="@layout/salary_date_type_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                android:id="@+id/material_calendar_view_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mcv_selectionColor="@color/salary"
                app:mcv_showOtherDates="defaults" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/manrope_bold"
                android:text="@string/date_selected_label"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/date_text_text_id"
                style="@style/CustomEditText"
                android:hint="@string/month_label"
                android:text="@string/date_you_choose" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="48dp"
                android:background="@color/grey_2" />

            <include layout="@layout/salary_person_item" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="48dp"
                android:background="@color/grey_2" />

            <com.app.tributum.utils.ui.CustomButton
                android:id="@+id/salary_send_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/salary_send_text_id"
                    style="@style/SendButton"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/salary_send"
                    android:text="@string/send_salary_label" />
            </com.app.tributum.utils.ui.CustomButton>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>