<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:background="@drawable/selector_white_stroke">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/contract_file_image_id"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/camera_svg"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/contract_file_text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="@string/add_pps_front" />
    </LinearLayout>

    <ImageView
        android:id="@+id/preview_image_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>